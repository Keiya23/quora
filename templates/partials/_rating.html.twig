<div class="d-flex flex-column mr-20 align-items-center">
    <i class="fas fa-arrow-up {{ rating > 0 ? 'rating-up' : '' }}"></i>
        <p class="text-small
        {% if rating > 0 %}
            rating-up
        {% elseif rating < 0 %}
            rating-down
        {% endif %}">
            {{ rating }}
        </p>
    <i class="fas fa-arrow-down {{ rating < 0 ? 'rating-down' : '' }}"></i>
</div>